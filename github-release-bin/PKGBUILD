# Maintainer: Alex P.

pkgname=github-release-bin
pkgver=0.9.0
pkgrel=1
pkgdesc="Commandline app to create and edit releases on Github (and upload artifacts)  â€” built from pre-compiled binary."
arch=('x86_64')
url="https://github.com/aktau/github-release"
license=('MIT')
source=(
"${url}/releases/download/v${pkgver}/linux-amd64-github-release.bz2"
"https://raw.githubusercontent.com/github-release/github-release/v${pkgver}/LICENSE"
)

package() {
  install -Dm755 $srcdir/linux-amd64-github-release \
    "${pkgdir}/usr/bin/github-release"

  install -Dm644 $srcdir/LICENSE "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}

